module Main

exports
  sorts
        Program Function Expr Atom Ops 
  context-free syntax
        Function+ -> Program

        Name Name+ "=" Expr Newline+ -> Function

        binary(Atom (Ops Atom)*) -> Expr

        apply(Name Atom+) -> Expr

        ifThenElse("if" Expr "then" Expr "else" Expr) -> Expr

        literalInt -> Atom

        argumentName -> Atom

        "(" Expr ")" -> Atom

        equal"==" -> Ops

        plus"+" -> Ops

        minus"-" -> Ops
