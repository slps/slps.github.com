module Main

exports
  sorts
        Action Cond Fighter Spec 
  context-free syntax
        actionId -> Action

        choose("choose" "(" actions::(Id*) ")") -> Action

        and(lhs::Cond "and" rhs::Cond) -> Cond

        constId -> Cond

        or(lhs::Cond "or" rhs::Cond) -> Cond

        fighter(name::Id "{" specs::(Spec*) "}") -> Fighter

        behavior(cond::Cond "[" move::Action fight::Action "]") -> Spec

        attribute(name::Id "=" strength::Number) -> Spec
